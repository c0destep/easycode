{
  "name": "c0destep/easycode",
  "description": "Codingstep Framework",
  "type": "package",
  "keywords": [
    "php8",
    "framework"
  ],
  "homepage": "https://www.codingstep.com.br",
  "time": "2022-06-09",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Lucas Alves",
      "email": "codestep@codingstep.com.br",
      "homepage": "https://www.codingstep.com.br",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "codestep@codingstep.com.br",
    "issues": "https://github.com/c0destep/easycode/issues",
    "source": "https://github.com/c0destep/easycode",
    "docs": "https://github.com/c0destep/easycode/wiki"
  },
  "require": {
    "c0destep/kacodega": "^1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "minimum-stability": "alpha",
  "require-dev": {
    "phpunit/phpunit": "^9",
    "phpstan/phpstan": "^1.8",
    "nunomaduro/phpinsights": "^2.4"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
        "phpunit": [
            "./vendor/bin/phpunit"
        ],
        "cs": [
            "./vendor/bin/php-cs-fixer fix --allow-risky yes"
        ],
        "phpstan": [
            "./vendor/bin/phpstan analyse src tests --level 7"
        ],
        "phpinsights": [
            "./vendor/bin/phpinsights"
        ]
    }
}
